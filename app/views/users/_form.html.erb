<%= form_for(@user, url: signup_path) do |f| %>

	<% if flash[:error] %>
		<% flash[:error].each do |error| %> 
			<%= error %> <br>
		<% end %> 
	<% end %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Create my account" %>

<% end %>