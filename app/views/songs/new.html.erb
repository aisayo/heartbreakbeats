<%= form_for @song do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <br>

  <%= f.label :artist %>
  <%= f.text_field :artist %> <br>

  <br>

  <%= f.fields_for :song_vibes, @song.song_vibes.build do |s_v| %>
  	<%= s_v.fields_for :vibe, @song.song_vibes.build.build_vibe do |v| %>
  	<%= v.label "New Vibe" %>
  	<%= v.text_field :name %>

  	<%= s_v.label "Level (1-5)" %>
  	<%= s_v.text_field :level %>
  	<% end %> 
  <% end %> <br>

  <br>

  <% @vibes.each do |v| %>
  	<%= v.name %>
  	<%= f.fields_for :song_vibes, @song.song_vibes.build do |s_v| %>
  		<%= s_v.fields_for :vibe, @song.song_vibes.build.build_vibe do |v_f| %>
  			<%= v_f.hidden_field :name, value: v.name %>
  		<% end %> 
  		<%= s_v.label "Level (1-5)" %>
  		<%= s_v.text_field :level %> <br>
  	<% end %>
  <% end %> <br>

<!-- NEED TO ADD VALIDATION SO THAT IF A SONG IS CREATED WITHOUT CREATING A NEW VIBE THAT IT DOES NOT CREATE A BLANK NEW VIBE -->

  <br>

  <%= f.submit "Add Song" %>

<% end %>